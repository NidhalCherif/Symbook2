<!DOCTYPE html>
{# date varible #}
{% set Date = date() %}
<html>
	<head>
		<meta charset="UTF-8">
		<title>
			{% block title %}
				Welcome to SymBook
			{% endblock %}
		</title>
	    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootswatch@5.3.2/dist/sketchy/bootstrap.min.css">
    	<link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Neucha|Cabin+Sketch&amp;display=swap">
    	<link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.12.0/css/all.css">
    	<link rel="stylesheet" href="assets/css/Login-Form-Basic-icons.css">

	</head>
	<body>
		{# NavBar #}
		<section class="mb-3">
			<div class="bg-dark py-2 d-flex justify-content-end px-5">
				<div class="d-flex gap-3">
				<a class="btn btn btn-outline-light rounded-2 py-1 px-3 fs-6 text-capitalize" type="button" href="{{ path('app_register') }}">Inscrire</a>
				<a class="btn btn btn-outline-light rounded-2 py-1 px-3 fs-6 text-capitalize" type="button" href="{{ path('app_login') }}">Connecter</a></div>
			</div>
			<nav class="navbar bg-body px-5 bg-primary shadow">
				<div class="container-fluid">
					<a class="navbar-brand fs-3 fw-bold text-primary" href="#">SymBook</a>
					<button class="btn rounded-5 px-3 bg-success btn-outline-light" type="button" data-bs-toggle="offcanvas" data-bs-target="#cart-canvas" aria-controls="cart-canvas">
					<span class="badge bg-primary rounded me-2">0</span><i class="fas fa-shopping-cart me-2"></i>0.000 DT</button>
				</div>
			</nav>
		</section>
		{# Cart offcanvas #}
		<div class="offcanvas offcanvas-end" tabindex="-1" id="cart-canvas">
			<div class="offcanvas-header">
				<h5 class="offcanvas-title">Votre Panier</h5><button class="btn-close" type="button" aria-label="Close" data-bs-dismiss="offcanvas"></button>
			</div>
			{# Les Liste des produit #}
			<div class="offcanvas-body">
				{# product card #}
				<div class="card mb-3">
					<div class="card-body">
						<div class="container">
							<div class="row">
								<div class="col-md-5"><img alt="white book on black textile" class="img-thumbnail w-100" src="../assets/img/photo-1586974722828-4a75a60c57b2.jpg"></div>
								<div class="col-md-7">
									<h4>Titre de Livre</h4>
									<h6 class="text-muted mb-2">Lewis Hamilton</h6>
									<div class="input-group"><button class="btn btn-primary" type="button"><i class="fas fa-caret-up"></i></button><input class="form-control text-center number-without-arrows" type="number" inputmode="numeric" value="0" min="0" step="1"><button class="btn btn-primary" type="button"><i class="fas fa-caret-down" style="font-size: 17px;"></i></button></div>
								</div>
							</div>
						</div>
					</div>
				</div>
				{# End product card #}
			</div>
			<hr>
			<h5 class="text-end mx-3">0,000 TD</h5>
			<div class="d-flex justify-content-center mb-3"><button class="btn btn-success" type="button">Passer votre commande</button></div>
		</div>
		{# Page content #}
		<div class=""> {% block body %}{% endblock %}</div>
		{# Footer #}
		<footer class="text-center bg-dark mt-3">
			<div class="container text-white py-4 py-lg-5">
				<p class="text-white mb-0">Copyright Â© {{Date | date('Y')}} SymBook</p>
			</div>
		</footer>
	    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
	</body>
</html>
