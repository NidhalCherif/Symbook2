{% extends 'base.html.twig' %}

{% block title %}Accueil{% endblock %}

{% block body %}
    <div class="card">
        <div class="card-body">
            <h1 class="card-title">
			Détail du livre
                <span class="text-primary">Détail du livre {{ livre.titre|capitalize }} ({{ livre.prix }} DT)</span>
            </h1>
            <div class="row">
                <div class="col-3">
                    <img src="{{ livre.image }}" class="img-fluid" alt="">
                </div>
                <div class="col-9">
                    <h4>ISBN: {{ livre.isbn }}</h4>
                    <h4>Editeur: {{ livre.editeur }}</h4>
                    <h4>Date Edition: {{ livre.editedAt|date('d-m-Y') }}</h4>
                    <p>{{ livre.resume }}</p>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
